<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_item_opinion"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_130sdp"
            android:layout_margin="@dimen/_5sdp"
            />

        <RelativeLayout
            android:id="@+id/linear_information"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toEndOf="@id/img_item_opinion"
            android:layout_margin="@dimen/_5sdp"
            android:layout_above="@+id/txt_opinion_item_opinion"
            >

            <TextView
                android:id="@+id/txt_name_item_opinion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="@dimen/_3sdp"
                app:drawableStartCompat="@drawable/ic_profile"
                android:drawablePadding="@dimen/_5sdp"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_opinion_item_opinion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="@dimen/_5sdp"
            android:layout_below="@id/img_item_opinion"
            android:layout_centerHorizontal="true"
            />

        <LinearLayout
            android:id="@+id/linear_true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/txt_opinion_item_opinion"
            android:layout_margin="@dimen/_5sdp"
            >

            <ImageView
                android:id="@+id/img_true_item_opinion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_true"
                android:layout_margin="@dimen/_3sdp"
                />

            <TextView
                android:id="@+id/txt_number_true_item_opinion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/black"
                android:layout_margin="@dimen/_3sdp"
                android:layout_gravity="center"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/txt_opinion_item_opinion"
            android:layout_margin="@dimen/_5sdp"
            android:layout_centerInParent="true"
            >

            <ImageView
                android:id="@+id/img_false_item_opinion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_false"
                android:layout_margin="@dimen/_3sdp"
                />

            <TextView
                android:id="@+id/txt_number_false_item_opinion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/black"
                android:layout_margin="@dimen/_3sdp"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_reply_item_opinion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_opinion_item_opinion"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/ic_comment"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>
</layout>